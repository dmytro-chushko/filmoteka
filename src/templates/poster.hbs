{{#each this}}
 
 
    <li class="film-card" id="{{ id }}">
        {{#if poster_path}}
        <picture>
        <source srcset="http://image.tmdb.org/t/p/w500/{{poster_path}} 1x, http://image.tmdb.org/t/p/original/{{poster_path}} 2x" type="image/jpeg" media="(min-width: 1024px)" />
        <source srcset="http://image.tmdb.org/t/p/w342/{{poster_path}} 1x, http://image.tmdb.org/t/p/w780/{{poster_path}} 2x" type="image/jpeg" media="(min-width: 768px)" />               
        <source srcset="http://image.tmdb.org/t/p/w342/{{poster_path}} 1x, http://image.tmdb.org/t/p/w780/{{poster_path}} 2x" type="image/jpeg" media="(min-width: 480px)" /> 
        <img class="film-img" 
        src="http://image.tmdb.org/t/p/w500/{{poster_path}}" alt=" {{ title }} "  loading="lazy" id="{{ id }}"  />
        </picture>
        {{else}}
        <img class="film-img" 
        src="no-image-icon-23485.png" alt=" {{ title }} "  loading="lazy" id="{{ id }}"  />
        {{/if}}
        <div class="film-description">
       
                 {{#if original_title}}
      <p class="film-name"> {{ original_title }}  </p>
                {{!-- {{else if }}
      <p class="film-name"> {{ title }}  </p> --}}
                {{/if}}
            {{#if genre_ids}}
      <span class="film-genre"> {{ genre_ids }} |</span>
                {{/if}}
                    {{#if genres}}
      <span class="film-genre"> {{ genres }} |</span>
                {{/if}}
            {{#if release_date}}
      <span class="film-year_of_issue"> {{ release_date }}  </span>
                {{/if}}
            {{#if vote_average}}
      <span class="film-vote_average"> {{ vote_average }}  </span>
                {{/if}} 
    </div>
            {{#if isButton}}
    <button type="button" class="film-btn_card_remove"></button>
            {{/if}} 

    </li> 


{{/each}}
