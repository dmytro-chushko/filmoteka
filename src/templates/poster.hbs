{{#each this}}
 
 
    <li class="film-card" id="{{ id }}">
        <picture>
        
        <source srcset="http://image.tmdb.org/t/p/w780/{{poster_path}} 1x, http://image.tmdb.org/t/p/original/{{poster_path}} 2x" type="image/jpeg" media="(min-width: 1024px)" />
        <source srcset="http://image.tmdb.org/t/p/w342/{{poster_path}} 1x, http://image.tmdb.org/t/p/w500/{{poster_path}} 2x" type="image/jpeg" media="(min-width: 768px)" />               
        <source srcset="http://image.tmdb.org/t/p/w154/{{poster_path}} 1x, http://image.tmdb.org/t/p/w185/{{poster_path}} 2x" type="image/jpeg" media="(min-width: 480px)" /> 
        <img class="film-img" 
        src="http://image.tmdb.org/t/p/w500/{{poster_path}}" alt=" "  title="{{ original_title }}" loading="lazy"  />
        </picture>
        <div class="film-description">
            <p class="film-name"> {{ title }}  </p>
            <span class="film-genre"> {{ genre_ids }} </span>
            <span class="film-year_of_issue"> {{ release_date }}  </span>
        </div>
    </li> 


{{/each}}
